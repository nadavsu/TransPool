<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar id="MenuBar" stylesheets="@../css/menu_bar.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <menus>
      <Menu mnemonicParsing="false" text="File">
         <items>
            <MenuItem fx:id="menuItemOpen" mnemonicParsing="false" onAction="#loadTransPoolFile" text="Open..." />
            <MenuItem fx:id="menuItemClose" mnemonicParsing="false" onAction="#quit" text="Close" />
         </items>
      </Menu>
      <Menu mnemonicParsing="false" text="View">
         <items>
            <Menu mnemonicParsing="false" text="Skin">
               <items>
                  <MenuItem fx:id="menuItemDarkMode" mnemonicParsing="false" onAction="#setDarkTheme" text="Dark mode" />
                  <MenuItem fx:id="menuItemLightMode" mnemonicParsing="false" onAction="#setLightTheme" text="Light mode" />
               </items>
            </Menu>
         </items>
      </Menu>
      <Menu mnemonicParsing="false" text="Help">
         <items>
            <MenuItem fx:id="menuItemAbout" mnemonicParsing="false" onAction="#openReadMe" text="About" />
         </items>
      </Menu>
   </menus>
</MenuBar>
